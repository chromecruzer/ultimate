# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build karn`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t karn`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system karn && \
          adduser --system -G karn karn

COPY dist/apps/karn karn/
RUN chown -R karn:karn .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix karn --omit=dev -f install

CMD [ "node", "karn" ]
